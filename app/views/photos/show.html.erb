<img src="<%= @the_photo.image.url %>" alt="Photo" />

<p>Caption: <%= @the_photo.caption %></p>
<p>Added by: <%= @the_photo.user.username %></p>
<p>Comments count: <%= @the_photo.comments.count %></p>
<p>Likes count: <%= @the_photo.likes.count %></p>

<h2>Comments</h2>
<% @the_photo.comments.each do |comment| %>
  <p><%= comment.body %> â€” <%= comment.author.username %></p>
<% end %>

<form action="/comments/create" method="post">
  <input type="hidden" name="photo_id" value="<%= @the_photo.id %>" />
  <input type="hidden" name="fan_id"   value="<%= session.fetch("user_id") %>" />

  <label for="body_field">Comment</label>
  <textarea id="body_field" name="body"></textarea>

  <button>Add comment</button>
</form>

<form action="/likes/create" method="post" class="mb-3">
  <input type="hidden" name="photo_id" value="<%= @the_photo.id %>">
  <button class="btn btn-outline-primary">Like (<%= @the_photo.likes.count %>)</button>
</form>

<a href="/photos" class="btn btn-link">Back to all photos</a>
