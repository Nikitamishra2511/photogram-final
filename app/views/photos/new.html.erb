<h1>New Photo</h1>

<%= form_with model: @photo, local: true do |form| %>
  <%= form.hidden_field :owner_id, value: current_user.id %>
  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </p>
<p>
  <%= form.label :caption %><br>
  <%= form.text_area :caption %>
</p>
<p>
  <%= form.button "Add Photo" %>
</p>
<% end %>
