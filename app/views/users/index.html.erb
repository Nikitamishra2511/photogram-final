<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>

      <% if user_signed_in? %>
        <th>Follow/Unfollow</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private? ? "Yes" : "No" %></td>

        <% if user_signed_in? && user != current_user %>
          <td>
            <%= render partial: "follow_requests/follow_button", locals: { user: user } %>
          </td>
        <% elsif user_signed_in? %>
          <td>â€”</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
