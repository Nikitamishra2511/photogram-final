<h1>All Users</h1>
<ul class="list-group">
  <% @list_of_users.each do |u| %>
    <li class="list-group-item">
      <%= u.username %>
      (<%= u.private ? "Private" : "Public" %>)
      <a href="/users/<%= u.id %>">View Profile</a>
    </li>
  <% end %>


  <table>
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th>Follow/Unfollow</th>
  </tr>

  <% @list_of_users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.private ? "Yes" : "No" %></td>
      <td>
        <% if user_signed_in? && current_user.id != user.id %>
          <!-- follow/unfollow logic here -->
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</ul>
