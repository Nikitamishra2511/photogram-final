<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<% if alert %>
  <p class="alert"><%= alert %></p>
<% end %>

<h1>Welcome to Photogram</h1>

<ul>
  <li><%= link_to "All users", "/users" %></li>
  <li><%= link_to "All public photos", "/photos" %></li>

  <% if user_signed_in? %>
    <li><%= link_to "Sign out", "/users/sign_out", method: :delete %></li>
  <% else %>
    <li><%= link_to "Sign in", "/users/sign_in" %></li>
    <li><%= link_to "Sign up", "/users/sign_up" %></li>
  <% end %>
</ul>

