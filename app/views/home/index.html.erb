<h1>Welcome to Photogram!</h1>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.username %>!</p>
  <%= link_to "Your Feed", user_feed_path(current_user.username) %> |
  <%= link_to "All Photos", photos_path %> |
  <%= link_to "All Users", users_path %> |
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% else %>
  <p>Please <%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to continue.</p>
<% end %>
